 doi = {10.5753/sbc.9004.8.3},
 editor = {Eduardo Souto and Michelle Wangham and Joni Fraga},
 isbn = {978-85-7669-304-8},
 keywords = {cryptography, prime field, AES, elliptic curves, SHA3},
 language = {pt},
 month = {November},
 pages = {93-140},
